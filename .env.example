# ===========================================
# LocaFleet Environment Variables
# Copy this file to .env.local and fill values
# ===========================================

# --- Supabase Database ---
DATABASE_URL=postgresql://user:password@host:6543/postgres
DIRECT_URL=postgresql://user:password@host:5432/postgres

# --- Supabase Auth ---
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# --- Resend (Email) ---
RESEND_API_KEY=re_your_api_key

# --- Better Auth ---
BETTER_AUTH_SECRET=generate-with-openssl-rand-base64-32
BETTER_AUTH_URL=http://localhost:3000

# --- App Config ---
NEXT_PUBLIC_APP_URL=http://localhost:3000

# --- Seed Passwords (Dev only) ---
SEED_ADMIN_PASSWORD=your-secure-admin-password
SEED_AGENT_PASSWORD=your-secure-agent-password
SEED_VIEWER_PASSWORD=your-secure-viewer-password
